<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title @@ Grocery Minder</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="container">
        <div class="header clearfix">
            <nav>
                <ul class="nav nav-pills pull-xs-right">
                    @if (Request.IsAuthenticated) {
                        <li class="nav-item">
                            @Html.ActionLink("Groceries", "Index", "Grocery", null, new { @class = "nav-link" } )
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Categories", "Index", "GroceryCategory", null, new { @class = "nav-link" })
                        </li>
                    }
                    @Html.Partial("_LoginPartial")
                </ul>
            </nav>
            <h1 class="text-muted">Grocery Minder</h1>
        </div> <!-- /header clearfix -->
    </div> <!-- /container -->

    <div class="container body-content">
        @if (!string.IsNullOrEmpty((TempData["SuccessMessage"] as String)))
        {
            <div class="alert alert-success">
                <p>@TempData["SuccessMessage"]</p>
            </div>
        }

        @RenderBody()
        <hr />
        <footer>
            <p>Check us out on <a href="http://github.com/phantomdata/grocery-minder" target="_blank">GitHub</a>.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/javascript")
</body>
</html>
