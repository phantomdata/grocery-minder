@model IList<GroceryMinder.Domain.Models.GroceryCategory>
@{
    ViewBag.Title = "Index";
}


<div class="page-header-container">
    <h2>Categories</h2>
    @Html.ActionLink("Create", "Create", null, new { @class = "btn btn-primary" })
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td class="actions-column">
                    @Html.ActionLink("📖", "Update", new { id = item.Id }, new { @class = "btn btn-default"})
                    @Html.ActionLink("␡", "Delete", new { id = item.Id }, new { @class = "btn btn-default delete" })
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.Count == 0)
{
    <div class="alert alert-info">
        <p>You have no items.  Click create above to add some!</p>
    </div>
}