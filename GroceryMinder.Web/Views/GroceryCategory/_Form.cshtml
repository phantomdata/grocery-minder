
@model GroceryMinder.Web.Models.GroceryCategory.IFormViewModel

@using (Html.BeginForm())
{
    @Html.ValidationSummary(false)
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "" })
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Priority, new { @class = "" })
        @Html.TextBoxFor(m => m.Priority, new { @class = "form-control" })
    </div>

    <div class="row">
        <div class="col-sm-12">
            <input type="submit" value="Save" class="btn btn-success full-width" />
        </div>
    </div>
}
